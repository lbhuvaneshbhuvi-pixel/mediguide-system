/**
 * @description This ruleset enforces a strict user-ownership model for the 'users' collection,
 *              where each user can only access their own data.
 * @dataStructure All user data is stored under the `/users/{userId}` path, ensuring clear
 *                ownership and easy management of user-specific information.
 * @keySecurityDecisions
 *   - Users can only create their own account document (self-registration).
 *   - Users can only read, update, and delete their own account document.
 *   - Listing all user documents is disallowed to protect user privacy.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages access to individual user account documents. Only the user with the
     *              matching UID can create, read, update, or delete their own document.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with UID 'user123' creates a new document at /users/user123 with matching id field.
     * @allow (get) - Authenticated user with UID 'user123' reads their document at /users/user123.
     * @allow (update) - Authenticated user with UID 'user123' updates their document at /users/user123.
     * @allow (delete) - Authenticated user with UID 'user123' deletes their document at /users/user123.
     * @deny (create) - Authenticated user with UID 'user123' attempts to create a document at /users/user456.
     * @deny (get) - Authenticated user with UID 'user123' attempts to read the document at /users/user456.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      // Helper function to check if the request is made by the owner of the document.
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      // Helper function to check if the request is made by the owner of an existing document.
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      // Allows only authenticated users to create their own document.
      // Validates that the 'id' field in the request matches the {userId} in the path.
      allow create: if isOwner(userId) && request.resource.data.id == userId;

      // Allows authenticated users to read their own document.
      allow get: if isOwner(userId);

      // Disallows listing all user documents.
      allow list: if false;

      // Allows authenticated users to update their own document.
      // Enforces that the 'id' field cannot be changed after creation.
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;

      // Allows authenticated users to delete their own document.
      allow delete: if isExistingOwner(userId);
    }
  }
}